{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/src/**", "backend/package.json"]
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/index.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/frontend/assets/$1"
    },
    {
      "source": "/(.*)\\.(png|jpg|jpeg|svg|ico|json)",
      "destination": "/frontend/$1.$2"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ]
}